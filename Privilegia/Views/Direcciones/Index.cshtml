@using Privilegia.Helpers
@model IEnumerable<Privilegia.Models.DireccionSecundaria>

<div class="panel panel-default">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Calle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoPostal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Municipio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provincia)
            </th>
            <th>
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Add", "CrearDireccionSecundaria", "Direcciones", routeValues: new { idPartner = ViewBag.PartnerId }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right direcciones" })
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Calle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoPostal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Provincia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Municipio)
                </td>
                <td>
                    <div class="pull-right">
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Editar", "EditarDireccionSecundaria", "Direcciones", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default direcciones" })
                        &nbsp;
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Borrar", "BorrarDireccionSecundaria", "Direcciones", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger direcciones" })

                    </div>
                </td>
            </tr>
        }
    </table>

</div>


<script type="text/javascript">
</script>




